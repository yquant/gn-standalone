base_dir=$(dirname "$0")

TASK_FILE="download_$1.tasks"

if [ ! -f "$TASK_FILE" ]; then
  echo Usage: "$0" \<task\>
  echo \<task\> is the download task to be run.
  echo Example: "$0" gn
  exit 1
fi

PYTHONDONTWRITEBYTECODE=1 exec python "$base_dir/download.py" "runtasks" "--tasksfile" "$TASK_FILE"
